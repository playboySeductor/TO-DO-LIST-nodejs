<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo App</title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/d0c6f360c1.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="container">
        <div class="todoblock">
  <!-- main title and search bar -->
            <div class="header-search">
                <div class="titleHolder">
                    <h1>MY TO-DO LIST</h1>
                </div>
                <div class="search-container">
                    <form action="/search" method="POST">
                    <input type="text" placeholder="Search..by category" name="searchCategory">
                    <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
<!-- todo list -->
            <div class="todoList">
                <!-- list holder -->
                <div class="listHolder" id="listHolder">
                    <ul class="list" id="lists">
    <% for(let i of Todo_list){%>
        <li class="listIcon">
            <div id="item">
                <span>
                    <%= i.task %>
                </span>
            </div>
            <div id="date">
                <span>
                    <%= i.date %>
                </span>
            </div>
            <div id="complete-task">
                <span>
                    Task Complete
                </span>
            </div>
            <div class="category-content">
                <span>
                    <%= i.category %>
                </span>
            </div>
            <div class="delete-complete">
                <i class="fas fa-check"></i>
                <a href="/delete-task/?id=<%= i._id %">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        </li>
        <%}%>
    
                    </ul>
                </div>
            </div>

<div class="add-btn">
    <a href="#modal"><i fas fa-plus></i></a>
</div>

        </div>
    </div>
    <div id="modal" class="modal-container">
        <div class="modal-inner">
            <a href="#" class="modal-close">X</a>
            <div class="formHolder">

                <form action="/" method="post">
                    <div class="col big">
                      <label for="task">Enter Task:</label>
                      <input id="task" type="text" name="task" placeholder="What do you need to do?" required>
                    </div>
                    <!-- category menu -->
                    <div class="category-date-grp">
                      <div class="category">
                        <label for="category">Category:</label>
                        <select name="category" id="category" required>
                          <option value="" selected hidden><span>Choose a Category</span></option>
                          <option value="Personal">Personal </option>
                          <option value="Work">Work</option>
                          <option value="Collage">Collage</option>
                          <option value="Other">Other</option>
                        </select>
                      </div>
                      <!-- date picker -->
                      <div class="date">
                        <label for="date">Date:</label>
                        <input type="date" value="" id="date" name="date">
                      </div>
                    </div>
          
                    <!-- submit button -->
                    <div class="btn-box">
                      <button type="submit" class="button">Add Task</button>
                    </div>
                  </form>

            </div>
        </div>
    </div>
    <script src="/js/home.js"></script>
</body>
</html>